<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/pizza_icon"
            android:layout_alignParentStart="true"
            android:id="@+id/img"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_toRightOf="@id/img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/img"
            android:layout_below="@id/img"
            android:id="@+id/restaurant_address2"
            android:paddingStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_address2"
            android:id="@+id/minimum_order"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/cardview_light_background"
            android:layout_alignStart="@id/restaurant_address2"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_phone2"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/minimum_order"
            android:layout_below="@+id/minimum_order"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/cardview_light_background"
            android:padding="5dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/my_progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="45"/>

    </LinearLayout>

</RelativeLayout>





